<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--TEXT STYLES-->

    <style name="TextLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="TextSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="ShoppingListTitle" parent="TextMedium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ShoppingListItems" parent="TextMedium">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ShoppingItem" parent="TextMedium">
        <item name="android:maxLines">2</item>
    </style>


    <!--END OF TEXT STYLES-->

    <style name="ImageViewBackground">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>
