<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/item_shopping_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_unselected"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/item_shopping_edit_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Here write your shopping item"
            android:padding="8dp"
            android:visibility="gone"
            tools:visibility="gone"
            >

            <AutoCompleteTextView
                android:id="@+id/item_shopping_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_shopping_view_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:visibility="visible"
            >

            <TextView
                android:id="@+id/item_shopping_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "12.12.2019"
                style="@style/TextSmall"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/item_shopping_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "This is my example shopping item"
                style="@style/TextMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_shopping_date"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

